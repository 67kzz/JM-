# Production Environment Configuration
NODE_ENV=production

# Server Configuration (Railway will provide the PORT)
# PORT will be automatically set by Railway
HOST=0.0.0.0

# Database Configuration - MongoDB Atlas
# Replace with your actual Atlas connection string
MONGODB_URI=mongodb+srv://jeetmash-user:<password>@your-cluster-name.xxxxx.mongodb.net/jeetmash?retryWrites=true&w=majority
DB_NAME=jeetmash

# Security Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secure-production-jwt-secret-key-change-this
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration - Add your Railway domain here
ALLOWED_ORIGINS=https://your-app-name.up.railway.app

# Rate Limiting (more restrictive for production)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50
VOTE_RATE_LIMIT=5
COMMENT_RATE_LIMIT=3

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# API Configuration
API_VERSION=v1

# Monitoring & Logging
LOG_LEVEL=warn
ENABLE_LOGGING=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_VOTING=true
ENABLE_COMMENTS=true
ENABLE_FILE_UPLOADS=true

# Cache Configuration (Redis not needed for basic setup)
CACHE_TTL=300